@model dynamic

@{
    ViewData["Title"] = "People generator";
}

<div class="container mt-5 px-2">
    
    <div class="mb-2 control-div d-flex justify-content-between align-items-center">
        <div class="position-relative  d-flex align-items-center align-items-end w-100">
            <div class="control">
                Country:
                <select class="form-select">
                    <option selected>English</option>
                    <option value="1">Greek</option>
                    <option value="2">Spanish</option>
                </select>
            </div>

            <div class="control">
                Error count:
                <div>
                    <input id="error-range" type="range" class="form-range" min="0" max="10" step="0.5">
                </div>
                <input id="error-input" class="form-control" type="number" value="0" min="0" max="1000">
            </div>

            <div class="control">
                Seed:
                <input class="form-control mb-2" type="number">
                <button class="btn btn-success">Randomize</button>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-responsive table-borderless">

            <thead>
            <tr class="bg-light">
                <th scope="col" width="5%">Id</th>
                <th scope="col" width="5%">Random id</th>
                <th scope="col" width="20%">Full name</th>
                <th scope="col" width="20%">Address</th>
                <th scope="col" width="10%">Phone number</th>
            </tr>
            </thead>
            <tbody>

            @for (var i = 0; i < 1000; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>345</td>
                    <td>Фамилия Имя Отчество</td>
                    <td>ул Мазурова</td>
                    <td>+4543655767</td>
                </tr>
            }


            </tbody>
        </table>

    </div>

</div>