@{
    ViewData["Title"] = "People generator";
}

<div class="container mt-5 px-2">
    <div class="mb-2 control-div d-flex justify-content-between align-items-center">
        <div class="position-relative  d-flex align-items-center align-items-end w-100">
            <div class="control">
                Country:
                <select class="form-select" id="select-country">
                    <option value="en" selected>English</option>
                    <option value="it">Italy</option>
                    <option value="es">Spanish</option>
                </select>
            </div>
            <div class="control">
                Error count:
                <div>
                    <input id="error-range" type="range" class="form-range" value="0" min="0" max="10" step="0.25">
                </div>
                <input id="error-input" class="form-control" type="number" value="0" min="0" max="1000">
            </div>
            <div class="control">
                Seed:
                <input id="seed" value="0" class="form-control mb-2" type="number">
                <button id="rand-btn" class="btn btn-success">Randomize</button>
            </div>
        </div>
    </div>
    <div class="table-responsive" id="tableContainer">
        <table id="table" class="table table-responsive table-borderless">
            <thead class="people-table-head">
            <tr class="bg-light">
                <th scope="col" width="5%">Id</th>
                <th scope="col" width="5%">Random id</th>
                <th scope="col" width="10%">Full name</th>
                <th scope="col" width="20%">Address</th>
                <th scope="col" width="10%">Phone number</th>
            </tr>
            </thead>
            <tbody id="tbody"></tbody>
        </table>
    </div>
</div>

